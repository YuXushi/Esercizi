<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Esercizi_MAUI_6._0.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Esercizi_MAUI_6._0"
    xmlns:view="clr-namespace:Esercizi_MAUI_6._0.View"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" 
        Icon="dungeons_torch.png"/>
    <ShellContent
        Title="Matematica"
        ContentTemplate="{DataTemplate local:MatematicaView}"
        Route="MatematicaView" 
        Icon="matematicaimg.png"/>
    <ShellContent
        Title="Geometria"
        ContentTemplate="{DataTemplate view:GeometriaPage}"
        Route="GeometriaPage" 
        Icon="geometria.png"/>

</Shell>
